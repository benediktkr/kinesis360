config BOARD_ENABLE_DCDC
    bool "Enable DCDC mode"
    select SOC_DCDC_NRF52X
    default y
    depends on BOARD_ADV360_LEFT || BOARD_ADV360_RIGHT

config ZMK_BATTERY_REPORTING
    bool "Enable battery reporting"
    default y
    depends on BOARD_ADV360_LEFT || BOARD_ADV360_RIGHT
